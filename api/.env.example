# Shedding Hub API Environment Configuration
# Copy this file to .env and customize as needed

# Environment (development, production, testing)
ENVIRONMENT=development

# API Configuration
SHEDDING_HUB_API_TITLE="Shedding Hub API"
SHEDDING_HUB_API_VERSION="0.1.0"
SHEDDING_HUB_DEBUG=true

# Server Configuration
SHEDDING_HUB_HOST=0.0.0.0
SHEDDING_HUB_PORT=8000
SHEDDING_HUB_RELOAD=true

# CORS Configuration (JSON list format)
SHEDDING_HUB_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
SHEDDING_HUB_CORS_CREDENTIALS=true

# Cache Configuration
SHEDDING_HUB_CACHE_TTL_SECONDS=3600
SHEDDING_HUB_CACHE_MAX_SIZE=1000

# Rate Limiting
SHEDDING_HUB_RATE_LIMIT_ENABLED=true
SHEDDING_HUB_RATE_LIMIT_DEFAULT="100/minute"
SHEDDING_HUB_RATE_LIMIT_SEARCH="30/minute"
SHEDDING_HUB_RATE_LIMIT_EXPENSIVE="10/minute"
SHEDDING_HUB_RATE_LIMIT_CACHE_OPS="5/minute"

# Data Configuration
# SHEDDING_HUB_DATA_DIRECTORY="/custom/path/to/data"
SHEDDING_HUB_MAX_DATASETS_LIMIT=1000
SHEDDING_HUB_DEFAULT_DATASETS_LIMIT=100
SHEDDING_HUB_DEFAULT_SEARCH_LIMIT=20

# GitHub Integration (set GITHUB_ENABLED=true to use GitHub as data source)
SHEDDING_HUB_GITHUB_ENABLED=true
SHEDDING_HUB_GITHUB_REPO_OWNER=shedding-hub
SHEDDING_HUB_GITHUB_REPO_NAME=shedding-hub
SHEDDING_HUB_GITHUB_BRANCH=main
SHEDDING_HUB_GITHUB_DATA_PATH=data
# SHEDDING_HUB_GITHUB_TOKEN=your_github_token_here
SHEDDING_HUB_GITHUB_CACHE_TTL=600

# Logging
SHEDDING_HUB_LOG_LEVEL=INFO
SHEDDING_HUB_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# SHEDDING_HUB_LOG_FILE="/var/log/shedding-hub-api.log"

# Security
SHEDDING_HUB_ALLOWED_HOSTS=["*"]
SHEDDING_HUB_MAX_REQUEST_SIZE=16777216

# Performance
SHEDDING_HUB_WORKER_PROCESSES=1
SHEDDING_HUB_MAX_CONNECTIONS=1000
SHEDDING_HUB_KEEPALIVE_TIMEOUT=5